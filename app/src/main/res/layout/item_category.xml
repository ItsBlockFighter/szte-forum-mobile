<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="TODO"
        android:src="@drawable/list_solid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/category_image"
        android:text="Title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/category_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_image"
        android:text="Lorem ipsum dolor sit amet, consecteturaaaaaaaa"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/category_description"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <include layout="@layout/item_forum" />
        <include layout="@layout/item_forum" />
        <include layout="@layout/item_forum" />
    </LinearLayout>

</RelativeLayout>