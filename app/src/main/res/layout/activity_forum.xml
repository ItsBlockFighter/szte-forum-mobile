<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.ForumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Forum image bal oldald majd utÃ¡na a title -->
        <ImageView
            android:id="@+id/forum_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="TODO"
            android:src="@drawable/folder_solid" />

        <TextView
            android:id="@+id/forum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/forum_image"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Forum description -->
        <TextView
            android:id="@+id/forum_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forum_title"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textSize="16sp" />

        <!-- divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/forum_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black" />

        <!-- Forum sub forums -->
        <LinearLayout
            android:id="@+id/forum_subforums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <include layout="@layout/item_forum" />
        </LinearLayout>

        <!-- divider -->
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/forum_subforums"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black" />

        <!-- Forum threads -->
        <!--<LinearLayout
            android:id="@+id/forum_threads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <include layout="@layout/item_thread" />
            <include layout="@layout/item_thread" />
            <include layout="@layout/item_thread" />
            <include layout="@layout/item_thread" />
            <include layout="@layout/item_thread" />
        </LinearLayout>-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forum_threads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginTop="16dp"
            android:orientation="vertical" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>